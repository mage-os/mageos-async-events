<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/async_event/:subscriptionId" method="GET">
        <service class="MageOS\AsyncEvents\Api\AsyncEventRepositoryInterface" method="get"/>
        <resources>
            <resource ref="MageOS_AsyncEvents::manage" />
        </resources>
    </route>
    <route url="/V1/async_events" method="GET">
        <service class="MageOS\AsyncEvents\Api\AsyncEventRepositoryInterface" method="getList"/>
        <resources>
            <resource ref="MageOS_AsyncEvents::manage" />
        </resources>
    </route>
    <route url="/V1/async_event" method="POST">
        <service class="MageOS\AsyncEvents\Api\AsyncEventRepositoryInterface" method="save"/>
        <resources>
            <resource ref="MageOS_AsyncEvents::manage" />
        </resources>
    </route>
    <route url="/V1/async_event/:subscriptionId" method="PUT">
        <service class="MageOS\AsyncEvents\Api\AsyncEventRepositoryInterface" method="save"/>
        <resources>
            <resource ref="MageOS_AsyncEvents::manage" />
        </resources>
    </route>
</routes>
